{
    "formatVersion": 1,
    "menu": {
        "Config.SettingsTab": {
            "label": "Config.SettingsTab",
            "formFields": {
                "name_cv": {
                    "type": "inputText",
                    "required": false,
                    "label": "Config.nameCvLabel",
                    "options": {
                        "defaultValue": "Ceevo Payment"
                    }
                },
                "desc_cv":{
                    "type":"inputText",
                    "required":false,
                    "label":"Config.descCvLabel",
                    "options":{
                       "defaultValue":"Ceevo payment plugin for plentymarkets"
                    }
                 },
                "environment":{
                    "type":"selectBox",
                    "required":false,
                    "label":"Config.environmentLabel",
                    "options":{
                       "defaultValue":"TEST",
                       "selectBoxValues":[
                          {
                             "value":"LIVE",
                             "caption":"Config.environmentPossibleValueLIVE"
                          },
                          {
                             "value":"TEST",
                             "caption":"Config.environmentPossibleValueTEST"
                          }
                       ]
                    }
                 },
                 "status_cv":{
                    "type":"selectBox",
                    "required":false,
                    "label":"Config.statusCvLabel",
                    "options":{
                       "defaultValue":"0",
                       "selectBoxValues":[
                          {
                             "value":"0",
                             "caption":"Config.statusCvPossibleValue0"
                          },
                          {
                             "value":"1",
                             "caption":"Config.statusCvPossibleValue1"
                          }
                       ]
                    }
                 },
                 "3dsecure":{
                    "type":"selectBox",
                    "required":false,
                    "label":"Config.3dsecureLabel",
                    "options":{
                       "defaultValue":"true",
                       "selectBoxValues":[
                          {
                             "value":"true",
                             "caption":"Config.3dSecurePossibleValueTrue"
                          },
                          {
                             "value":"false",
                             "caption":"Config.3dSecurePossibleValueFalse"
                          }
                       ]
                    }
                 },
                 "transactionType":{
                  "type":"selectBox",
                  "required":false,
                  "label":"Config.transactionTypeLabel",
                  "options":{
                     "defaultValue":"true",
                     "selectBoxValues":[
                        {
                           "value":"true",
                           "caption":"Config.transactionTypePossibleValueTrue"
                        },
                        {
                           "value":"false",
                           "caption":"Config.transactionTypePossibleValueFalse"
                        }
                     ]
                  }
               },
                "clientId": {
                    "type": "inputText",
                    "required": false,
                    "label": "Config.clientIdLabel",
                    "options": {
                        "defaultValue": ""
                    }
                },
                "clientSecret": {
                    "type": "inputText",
                    "required": false,
                    "label": "Config.clientSecretLabel",
                    "options": {
                        "defaultValue": ""
                    }
                },
                "apiKey": {
                    "type": "inputText",
                    "required": false,
                    "label": "Config.apiKeyLabel",
                    "options": {
                        "defaultValue": ""
                    }
                }
            }
        }
    }
}
